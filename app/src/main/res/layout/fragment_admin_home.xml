<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/zxing_transparent">

    <TextView
        android:id="@+id/btn_issue_book"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Issue Book"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#9b92b3"
        android:layout_margin="10dp"
        android:background="@drawable/bg_round_rect"/>
    <TextView
        android:id="@+id/btn_return_book"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Return Book"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#9b92b3"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_round_rect"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Transactions"
        android:gravity="center"
        android:textSize="18dp"
        android:id="@+id/pendingTran"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:id="@+id/rvOffline"/>


</LinearLayout>
